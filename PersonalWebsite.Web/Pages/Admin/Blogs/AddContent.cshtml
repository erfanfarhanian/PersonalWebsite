@page
@model PersonalWebsite.Web.Pages.Admin.Blogs.AddContentModel
@{
    ViewData["Title"] = "افزودن مطلب جدید";
}

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <h2>افزودن مطلب</h2>
            <hr />
            <div class="form-group">
                <label>عنوان مطلب</label>
                <input type="text" asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title"></span>
            </div>
            <div class="form-group">
                <label>متن مختصر</label>
                <textarea class="form-control" asp-for="Blog.SDescription" rows="10"></textarea>
                <span asp-validation-for="Blog.SDescription"></span>
            </div>
            <div class="form-group">
                <label>متن کامل</label>
                <textarea class="form-control" asp-for="Blog.LDescription" rows="20"></textarea>
                <span asp-validation-for="Blog.LDescription"></span>
            </div>
            <input type="submit" value="ذخیره" class="btn btn-success" />
            <a href="/Admin/Blogs/Index" class="btn btn-danger">بازگشت</a>
        </div>
        <div class="col-md-4">
            <br />
            <br /><br /><br /><br />
            <img id="ContentImg" class="thumbnail" src="~/blog/image/no-photo.jpg" />
            <div class="form-group">
                <label>انتخاب تصویر</label>
                <input type="file" name="imgContentUp" id="imgContentUp">
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#ContentImg').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgContentUp").change(function () {
            readURL(this);
        });

    </script>

    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>

        CKEDITOR.replace('Blog_LDescription', {
            customConfig: '/js/Config.js'
        });

    </script>
}