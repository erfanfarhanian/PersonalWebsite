@page
@model PersonalWebsite.Web.Pages.Admin.Experiences.IndexModel
@{
    ViewData["Title"] = "سوابق کاری";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست سوابق</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست سوابق من
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">
                    <a asp-page="AddExperience" class="btn btn-outline btn-success">افزودن سوابق جدید</a>
                </div>
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row"><div class="col-sm-6"><div class="dataTables_length" id="dataTables-example_length"></div></div><div class="col-sm-6"><div id="dataTables-example_filter" class="dataTables_filter"></div></div></div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام شرکت</th>
                                    <th>توضیحات</th>
                                    <th>از تاریخ</th>
                                    <th>تا تاریخ</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var education in Model.Experiences)
                                {
                                    <tr>
                                        <td>@education.Title</td>
                                        <td>@education.Description</td>
                                        <td>@education.FromDate</td>
                                        <td>@education.TillDate</td>
                                        <td>
                                            <a href="/Admin/Experiences/EditExperience/@education.ExperienceID" class="btn btn-warning btn-sm">ویرایش</a>
                                            <a href="/Admin/Experiences/DeleteExperience/@education.ExperienceID" class="btn btn-danger btn-sm">حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

