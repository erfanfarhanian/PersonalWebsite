@page
@model PersonalWebsite.Web.Pages.Admin.IndexModel
@using PersonalWebsite.Core.Convertors
@{

}

<!--state overview start-->
<div class="row state-overview">
    <div class="col-lg-4 col-sm-6">
        <section class="panel">
            <div class="symbol terques">
                <i class="icon-user"></i>
            </div>
            <div class="value">
                <h1>@Model.ViewData["BlogCount"]</h1>
                <h4>مطلب</h4>
            </div>
        </section>
    </div>
    <div class="col-lg-4 col-sm-6">
        <section class="panel">
            <div class="symbol red">
                <i class="icon-tags"></i>
            </div>
            <div class="value">
                <h1>@Model.ViewData["ContactCount"]</h1>
                <h4>پیام </h4>
            </div>
        </section>
    </div>
    <div class="col-lg-4 col-sm-6">
        <section class="panel">
            <div class="symbol yellow">
                <i class="icon-shopping-cart"></i>
            </div>
            <div class="value">
                <h1>@Model.ViewData["CommentCount"]</h1>
                <h4>نظر</h4>
            </div>
        </section>
    </div>
</div>
<!--state overview end-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h3>
                    درباره من
                </h3>
            </header>
            <hr />
            <div class="panel-body">
                @foreach (var item in Model.AboutUser)
                {
                    <div class="col-md-3">
                        <img style="width:347px; height:486px" src="~/UserProfile/@item.ImageProfile" width="350" height="400" alt="Alternate Text" />
                    </div>
                    <div class="col-md-9">
                        <p>@item.Bio</p>
                        <div class="col-md-6">
                            <ul>
                                <li>
                                    <strong>تاریخ تولد: @item.BirthDate </strong>
                                </li>
                                <li>
                                    <strong>شماره تماس: @item.Telephone</strong>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul>
                                <li>
                                    <strong>ایمیل: @item.Email</strong>
                                </li>
                                <li>
                                    <strong>آدرس: @item.Address</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!--work progress start-->
        <section class="panel">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست پیام ها
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="row"><div class="col-sm-6"><div class="dataTables_length" id="dataTables-example_length"></div></div><div class="col-sm-6"><div id="dataTables-example_filter" class="dataTables_filter"></div></div></div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr>
                                        <th>نام کاربر</th>
                                        <th>ایمیل</th>
                                        <th>تاریخ</th>
                                        <th>موضوع</th>
                                        <th>دستور</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contact in Model.Contacts.Item1)
                                    {
                                        <tr>
                                            <td>@contact.Name</td>
                                            <td>@contact.Email</td>
                                            <td>@contact.CreateDate.ToShamsi()</td>
                                            <td>@contact.Title</td>
                                            <td>
                                                <a href="/Admin/Contacts/ShowContact/@contact.ContactId" class="btn btn-info btn-sm">نمایش پیام</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                        <ul class="pagination">
                                            @for (int i = 1; i <= Model.Contacts.Item2; i++)
                                            {
                                                <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                                                    <a href="/Admin?PageId=@i">@i</a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </section>
        <!--work progress end-->
    </div>
</div>