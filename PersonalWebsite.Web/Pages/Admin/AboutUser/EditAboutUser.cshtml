@page "{id}"
@model PersonalWebsite.Web.Pages.Admin.AboutUser.EditAboutUserModel
@{
    ViewData["Title"] = "ویرایش درباره من";
}

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="AboutUser.AU_ID" />
        <input type="hidden" asp-for="AboutUser.ImageProfile" />
        <div class="col-md-8">
            <h2>ویرایش درباره من</h2>
            <hr />
            <div class="form-group">
                <label>نام و نام خانوادگی</label>
                <input type="text" asp-for="AboutUser.FullName" class="form-control" />
                <span asp-validation-for="AboutUser.FullName"></span>
            </div>
            <div class="form-group">
                <label>تاریخ تولد</label>
                <input type="text" asp-for="AboutUser.BirthDate" class="form-control" />
                <span asp-validation-for="AboutUser.BirthDate"></span>
            </div>
            <div class="form-group">
                <label>ایمیل</label>
                <input type="text" asp-for="AboutUser.Email" class="form-control" />
                <span asp-validation-for="AboutUser.Email"></span>
            </div>
            <div class="form-group">
                <label>تلفن</label>
                <input type="text" asp-for="AboutUser.Telephone" class="form-control" />
                <span asp-validation-for="AboutUser.Telephone"></span>
            </div>
            <div class="form-group">
                <label>آدرس</label>
                <input type="text" asp-for="AboutUser.Address" class="form-control" />
                <span asp-validation-for="AboutUser.Address"></span>
            </div>
            <div class="form-group">
                <label>توضیحات درباره من</label>
                <textarea class="form-control" asp-for="AboutUser.Bio" rows="10"></textarea>
                <span asp-validation-for="AboutUser.Bio"></span>
            </div>
            <input type="submit" value="ذخیره" class="btn btn-success" />
            <a href="/Admin/AboutUser/Index" class="btn btn-danger">بازگشت</a>
        </div>
        <div class="col-md-4">
            <br />
            <br /><br /><br /><br />
            <img id="userProfileImg" class="thumbnail" src="~/UserProfile/@Model.AboutUser.ImageProfile" />
            <div class="form-group">
                <label>انتخاب تصویر</label>
                <input type="file" name="imgUserProfileUp" id="imgUserProfileUp">
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#userProfileImg').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgUserProfileUp").change(function () {
            readURL(this);
        });

    </script>
}

